<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="assets_backend" name="custom bar assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/havelock_backend_theme/static/src/less/variables.less"/>
                <link rel="stylesheet" href="/havelock_backend_theme/static/src/less/bootswatch.less"/>
                <link rel="stylesheet" href="/havelock_backend_theme/static/src/less/style.less"/>
                <script type="text/javascript" src="/havelock_backend_theme/static/src/js/toggle_leftbar.js"></script>
            </xpath>
        </template>

 		 <template id="menu_webclient_bootstrap_havelock_backend_theme" inherit_id="web.webclient_bootstrap">
            <xpath expr="//div[@class='navbar-header']" position="inside">
                <ul class="ul_toggle_leftmenu">
                    <li class="btn-link toggle_leftmenu">
                         <span class="fa fa-bars fa-lg"></span>
                    </li>
                </ul>
            </xpath>

        </template>


    </data>
</odoo>

