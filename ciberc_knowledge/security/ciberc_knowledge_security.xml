        <record id="group_ciberc_perfomance_management" model="res.groups">
            <field name="name">Alta gerencia</field>
            <field name="implied_ids" eval="[(4, ref('ciberc_knowledge.group_ciberc_perfomance_human_resources'))]"/>
            <field name="category_id" ref="ciberc_knowledge.module_knowledge"/>
        </record>

        <record id="group_ciberc_perfomance_admin" model="res.groups">
            <field name="name">Administrador</field>
            <field name="implied_ids" eval="[(4, ref('ciberc_knowledge.group_ciberc_perfomance_management'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="ciberc_knowledge.module_knowledge"/>
