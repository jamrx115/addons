<?xml version="1.0" encoding="utf-8"?>
<odoo><!--t-field-options='{"widget": "monetary", "display_currency": "empleado.contract_id.x_currency_id"}'-->
<template id="report_mintrab">
    <t t-call="report.html_container">
        <t t-call="report.external_layout">
            <div class="page">
                <h2>Informe empleador MT</h2>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No. Empleado</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Nacionalidad</th>
                            <th>Estado civil</th>
                            <th>Documento identificación</th>
                            <th>Número de Documento</th>
                            <th>País origen</th>
                            <th>Lugar Nacimiento</th>
                            <th>NIT</th>
                            <th>No. Afiliación IGSS</th>
                            <th>Sexo (M) o (F)</th>
                            <th>Fecha Nacimiento</th>
                            <th>Cantidad de hijos</th>
                            <th>Ha trabajado en el extranjero</th>
                            <th>En qué forma</th>
                            <th>País</th>
                            <th>Motivo de finalización de la relación laboral en el extranjero</th>
                            <th>Nivel académico</th>
                            <th>Profesión</th>
                            <th>Etnia</th>
                            <th>Idioma</th>
                            <th>Tipo contrato</th>
                            <th>Fecha inicio labores</th>
                            <th>Fecha reinicio labores</th>
                            <th>Fecha retiro labores</th>
                            <th>Puesto</th>
                            <th>Jornada de trabajo</th>
                            <th>Días laborados en el año</th>
                            <th>Permiso de trabajo</th>
                            <th>Salario anual nominal</th>
                            <th>Bonificación Decreto 7889 (Q 250.00)</th>
                            <th>Total horas extras anuales</th>
                            <th>Valor de hora extra</th>
                            <th>Monto aguinaldo decreto 7678</th>
                            <th>Monto bono 14 decreto 4292</th>
                            <th>Retribución por comisiones</th>
                            <th>Viáticos</th>
                            <th>Bonificaciones adicionales</th>
                            <th>Retribución por vacaciones</th>
                            <th>Retribución por indemnización</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="empleado">
                            <tr>
                                <td><span t-field="empleado.x_code"/></td><!--numero empleado-->
                                <td><span t-field="empleado.firstname"/></td><!--nombres-->
                                <td><span t-field="empleado.lastname"/></td><!--apellidos-->
                                <td><span t-field="empleado.country_id"/></td><!--nacionalidad-->
                                <t t-if="empleado.marital == 'single'"><!--estado civil-->
                                    <td><span>1</span></td>
                                </t>
                                <t t-elif="empleado.marital == 'married'">
                                    <td><span>2</span></td>
                                </t>
                                <t t-else="">
                                    <td></td>
                                </t>
                                <td></td><!--tipo doc identificacion-->
                                <td><span t-field="empleado.identification_id"/></td><!--num doc identificacion-->
                                <td><span t-field="empleado.x_pais_nace.code_ext"/></td><!--pais origen-->
                                <td><span t-field="empleado.x_birth_city_id.code"/></td><!--ciudad nacimiento-->
                                <td><span t-field="empleado.x_nit"/></td><!--nit-->
                                <td><span t-field="empleado.ssnid"/></td><!--seguro social-->
                                <t t-if="empleado.gender == 'male'"><!--sexo-->
                                    <td><span>M</span></td>
                                </t>
                                <t t-elif="empleado.gender == 'female'">
                                    <td><span>F</span></td>
                                </t>
                                <t t-else="">
                                    <td></td>
                                </t>
                                <td><span t-field="empleado.birthday" t-field-options='{"format": "dd/MM/yyyy"}'/></td><!--fecha nacimiento-->
                                <td><span t-esc="len(empleado.fam_children_ids)"/></td><!--cantidad de hijos-->
                                <td></td><!--ha trab extr-->
                                <td></td><!--en que forma-->
                                <td></td><!--pais-->
                                <td></td><!--motivo fin extr-->
                                <td></td><!--niv acad-->
                                <td></td><!--profesion-->
                                <td><span>4</span></td><!--etnia-->
                                <td></td><!--idioma-->
                                <td></td><!--tipo contrato-->
                                <td><span t-field="empleado.joining_date" t-field-options='{"format": "dd/MM/yyyy"}'/></td><!--fecha inicio labores-->
                                <td></td><!--fecha reinicio labores-->
                                <td></td><!--fecha retiro labores-->
                                <td></td><!--puesto-->
                                <td>Diurna</td><!--jornada-->
                                <td><span t-esc="empleado.get_filtered_lineid('DIASTRABAJO')"/></td><!--dias laborados año-->
                                <t t-if="empleado.contract_id.permit_no"><!--permiso de trabajo-->
                                    <td><span t-field="empleado.contract_id.permit_no"/></td>
                                </t>
                                <t t-else="">
                                    <td></td>
                                </t>
                                <td><span t-esc="empleado.get_filtered_lineid('NET')"/></td><!--salario anual nominal-->
                                <td><span t-esc="empleado.get_filtered_lineid('BON37')"/></td><!--bonif dec 7889 Q 250.00-->
                                <td><span>0</span></td><!--total horas extras anuales-->
                                <td><span>0</span></td><!--valor hora extra-->
                                <td><span t-esc="empleado.get_filtered_lineid('AGUI')"/></td><!--monto agui decr 7678-->
                                <td><span t-esc="empleado.get_filtered_lineid('BON14')"/></td><!--monto bono 14 decr 4292-->
                                <td><span t-esc="empleado.get_filtered_lineid('COM')"/></td><!--retrib comisiones-->
                                <td><span>0</span></td><!--viaticos-->
                                <td><span t-esc="empleado.get_filtered_lineid('BON')"/></td><!--bonif adicionales-->
                                <td></td><!--retribuc vacaciones-->
                                <td></td><!--retribuc indemnizacion-->
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>